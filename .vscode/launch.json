    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Odoo",
            "type": "python",
            "request": "launch",
            "python": "/usr/bin/python3.7",
            "console": "integratedTerminal",
            "program": "/usr/bin/odoo",
            "args": [
                "--config=/etc/odoo/odoo.conf"
            ],
            "justMyCode": false,
            "cwd": "${workspaceRoot}",
            "env": {},
            "envFile": "${workspaceRoot}/.env",
            "debugOptions": [
                // "WaitOnAbnormalExit",
                // "WaitOnNormalExit",
                "RedirectOutput"
            ]
        }
    ]
}