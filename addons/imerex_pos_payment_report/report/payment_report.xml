					<!--<br /><t t-if="grand_journal_dict"><h4>Payment Methods Summary</h4><table class="table table-sm"><thead><tr><th>Name</th><th>Total</th></tr></thead><tbody><tr t-if="grand_journal_dict.get('Total',False)"><td><strong>Total</strong></td><td><span t-esc="'%.2f'%grand_journal_dict.get('Total',0.0)" t-esc-options='{"widget": "monetary", "display_currency": currency}' /></td></tr><tr t-if="grand_journal_dict.get('Refund',False)"><td>Refund</td><td><span t-esc="'%.2f'%grand_journal_dict.get('Refund',0.0)" t-esc-options='{"widget": "monetary", "display_currency": currency}' /></td></tr></tbody></table></t> -->
					<br />
					<h4>Products Sold</h4>
					<table  class="table table-sm">
						<thead>
							<tr>
								<th>Product</th>
								<th>Quantity</th>
								<th>Price Unit</th>
							</tr>
						</thead>
						<tbody>
							<tr t-foreach='products' t-as='line'>
								<t t-set="internal_reference" t-value="line['code'] and '[%s] ' % line['code'] or ''" />
                                <td>
                                    <t t-esc="internal_reference" />
                                    <t t-esc="line['product_name']" />
                                </td>
                                <td>
                                    <t t-esc="line['quantity']" />
                                    <t t-if='line["uom"] != "Units"'>
                                        <t t-esc='line["uom"]' />
                                    </t>
                                </td>
                                <td>
                                    <t t-esc='line["price_unit"]' />
                                    <t t-if='line["discount"] != 0'>
                                        Disc: 
                                        <t t-esc='line["discount"]' />%
                                    </t>
                                </td>
							</tr>
						</tbody>
					</table>
				</div>
			</t>
		</t>
	</template>
	<record id="imerex_pos_payment_report_action" model="ir.actions.report">
		<field name="name">Detailed Report</field>
		<field name="model">report.imerex_pos_payment_report.imerex_pos_payment_report_doc</field>
		<field name="report_type">qweb-pdf</field>
		<field name="report_name">imerex_pos_payment_report.imerex_pos_payment_report_doc</field>
		<field name="print_report_name">'Detailed Report'</field>
	</record>
            <record id="product_template_form_view_inheirt" model="ir.ui.view">
            <field name="name">product.template.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" 
                ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
            <xpath expr="//page/group[@name='inventory']" position="after">
                <group>
                    <field name="reserved_qty"/>
                    <field name="available_qty"/>
                </group>
            </xpath>
            </field>
        </record>
</odoo>
